---
import Header from '../components/layouts/Header'
import Footer from '../components/layouts/Footer.astro'

import '../assets/styles/style.css'

import 'swiper/css';
import 'swiper/css/navigation';

const primary = '#0077B6'
const secondary = '#00B4D8'
const white = '#F1FAFF'
const black = '#2E2E2E'
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <title>Pacific Waves Hostel & Surf</title>
    <meta name="description" content="Descubre Pacific Waves Hostel, tu lugar ideal frente al mar para surfear, relajarte y conectar con viajeros en la costa." />
    <meta name="author" content="Pacific Waves Hostel" />
    <meta name="robots" content="index, follow" />

    <!-- Open Graph para compartir en redes -->
    <meta property="og:title" content="Pacific Waves Hostel & Surf" />
    <meta property="og:description" content="Surf, relax y buena vibra frente al mar." />
    <meta property="og:image" content="/og-image.jpg" />
    <meta property="og:url" content="https://www.pacificwaveshostel.com" />
    <meta property="og:type" content="website" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Pacific Waves Hostel & Surf" />
    <meta name="twitter:description" content="Surf, relax y buena vibra frente al mar." />
    <meta name="twitter:image" content="/twitter-image.jpg" />

    <!-- Accesibilidad y SEO semÃ¡ntico -->
    <link rel="canonical" href="https://www.pacificwaveshostel.com" />
  </head>
  <body>
    <Header client:load />
    <main id="main-content">
      <slot />
    </main>
    <Footer />
  </body>
</html>


<style is:global define:vars={{ primary, secondary, white, black }}>
  /* universal reset */
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  body {
    background-color: var(--white);
  }

  body::-webkit-scrollbar {
    display: none;
  }
/* typography */

/* HEAD */
@font-face {
  font-family: 'bonny';
  src: url('../assets/fonts/bonny/Bonny-Variable.ttf') format('truetype');
  font-weight: 600;
  font-style: normal;
}

/* SUBTITLES */
@font-face {
  font-family: 'raleway';
  src: url('../assets/fonts/raleway/Raleway-Light.ttf') format('truetype');
  font-weight: 300;
  font-style: normal;
}

@font-face {
  font-family: 'raleway';
  src: url('../assets/fonts/raleway/Raleway-Regular.ttf') format('truetype');
  font-weight: 400;
  font-style: normal;
}

@font-face {
  font-family: 'raleway';
  src: url('../assets/fonts/raleway/Raleway-Bold.ttf') format('truetype');
  font-weight: 700;
  font-style: normal;
}

/* BODY */

@font-face {
  font-family: 'roboto';
  src: url('../assets/fonts/roboto/Roboto-Light.ttf') format('woff2');
  font-weight: 100;
  font-style: normal;
}
@font-face {
  font-family: 'roboto';
  src: url('../assets/fonts/roboto/Roboto-Light.ttf') format('woff2');
  font-weight: 300;
  font-style: normal;
}
@font-face {
  font-family: 'roboto';
  src: url('../assets/fonts/roboto/Roboto-Medium.ttf') format('woff2');
  font-weight: 400;
  font-style: normal;
}

@font-face {
  font-family: 'roboto';
  src: url('../assets/fonts/roboto/Roboto-Bold.ttf') format('woff2');
  font-weight: 700;
  font-style: normal;
}

h1,h2 {
  font-family: 'bonny';
}

h3,h4,h5,h6 {
  font-family: 'raleway';
}

p {
  font-family: 'roboto';
}
  /* container */
  .container {
    width: 100%;
    margin-right: auto;
    margin-left: auto;
    padding-right: 1rem;
    padding-left: 1rem;
  }

  @media (min-width: 640px) {
    .container {
      max-width: 640px;
      padding-right: 1.5rem;
      padding-left: 1.5rem;
    }
  }

  @media (min-width: 768px) {
    .container {
      max-width: 768px;
    }
  }

  @media (min-width: 1024px) {
    .container {
      max-width: 1024px;
      padding-right: 2rem;
      padding-left: 2rem;
    }
  }

  @media (min-width: 1280px) {
    .container {
      max-width: 1280px;
    }
  }

  @media (min-width: 1536px) {
    .container {
      max-width: 1536px;
    }
  }

  /* buttons */
  .btn-primary {
    background-color: var(--primary);
    border: none;
    border-radius: 2rem;
    color: var(--white);
    cursor: pointer;
    font-family: 'roboto';
    font-size: 1rem;
    font-weight: 300;
    padding: 0.5rem 1rem;
    transition: background-color 0.3s ease-in-out;
  }

  .btn-primary:hover {
    background-color: var(--secondary);
  }

.sr-only {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border-width: 0;
}
</style>
